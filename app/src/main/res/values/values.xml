<?xml version="1.0" encoding="utf-8"?>
<resources>


    <!-- THEME DAVID -->
    <style name="buttonDarkDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:textColor">@color/textColorDavid</item>
        <item name="android:background">@color/backgroundDavid</item>
    </style>

    <style name="buttonLightDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:textColor">@color/textColorDavid</item>
        <item name="android:background">@color/color1David</item>
    </style>
    <style name="buttonSpecialDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:textColor">@color/textColorDavid</item>
        <item name="android:background">@color/color2David</item>
    </style>

    <style name="buttonNumDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:textColor">@color/numPadColorDavid</item>
        <item name="android:background">@color/color1David</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="spinnerTextDavid" parent="android:Widget.DeviceDefault.TextView.SpinnerItem">
        <item name="android:background">@color/color1David</item>
        <item name="android:dropDownSelector">@color/displayDavid</item>
        <item name="android:divider">@null</item>
        <item name="android:textColor">@color/displayDavid</item>
        <item name="android:color">@color/displayDavid</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="CheckBoxDavid" parent="android:Widget.DeviceDefault.CompoundButton.CheckBox">
        <item name="android:textColor">@color/displayDavid</item>
        <item name="android:textColorPrimary">@color/displayDavid</item>
        <item name="android:padding">16dp</item>
    </style>

    <style name="normalDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:textColor">@color/color2David</item>
        <item name="android:color">@color/displayDavid</item>
    </style>

    <style name="Theme1" parent="android:Theme.DeviceDefault">
        <item name="android:colorBackground">@color/displayDavid</item>
        <item name="buttonFunction">@style/buttonDarkDavid</item>
        <item name="buttonOperator">@style/buttonLightDavid</item>
        <item name="buttonSpecial">@style/buttonSpecialDavid</item>
        <item name="android:textColor">@color/displayDavid</item>
        <item name="buttonNum">@style/buttonNumDavid</item>
        <item name="displayColor">@color/displayDavid</item>
        <item name="displayTextColor">@color/textDisplayColorDavid</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:checkboxStyle">@style/CheckBoxDavid</item>
        <item name="change_img">@drawable/change_white</item>
        <item name="frac_img">@drawable/frac_white</item>
        <item name="history_img">@drawable/history_white</item>
        <item name="settings_img">@drawable/settings_white</item>
        <item name="android:buttonStyle">@style/normalDavid</item>
        <item name="history_style">@color/color1David</item>
        <item name="android:windowActionBar">false</item>
        <item name="spinnerTextStyle">@style/spinnerTextDavid</item>
        <item name="mrl_rippleOverlay">true</item>
        <item name="mrl_rippleColor">@color/color2David</item>
        <item name="mrl_rippleAlpha">0.2</item>
        <item name="mrl_rippleDelayClick">false</item>
        <item name="mrl_rippleHover">true</item>
    </style>

