<?xml version="1.0" encoding="utf-8"?>
<resources>

    <!-- THEME DAVID -->
    <style name="buttonDarkDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:background">@drawable/button_dark_david</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="buttonLightDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name ="android:background">@drawable/button_light_david</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name = "buttonSpecialDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name ="android:background">@drawable/button_special_david</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="buttonNumDavid" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:background">@drawable/button_light_david</item>
        <item name="android:textColor">#F64B55</item>
    </style>

    <style name="toggleDavid" parent="android:Widget.Holo.Button.Toggle">
        <item name="android:background">@drawable/toggle_david</item>
    </style>

    <style name="david" parent="android:Theme.Holo">
        <item name="android:colorBackground">@color/backgroundDavid</item>
        <item name="buttonFunction">@style/buttonDarkDavid</item>
        <item name="buttonOperator">@style/buttonLightDavid</item>
        <item name="buttonSpecial">@style/buttonSpecialDavid</item>
        <item name="buttonNum">@style/buttonNumDavid</item>
        <item name="displayColor">@color/displayTextDavid</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/buttonDarkDavid</item>
        <item name="android:buttonStyleToggle">@style/toggleDavid</item>
    </style>

    <!-- THEME ALSTON -->
    <style name="buttonDarkAlston" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:background">@drawable/button_dark_alston</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name="buttonLightAlston" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name ="android:background">@drawable/button_light_alston</item>
        <item name="android:textColor">#ffffff</item>
    </style>

    <style name = "buttonSpecialAlston" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name ="android:background">@drawable/button_special_alston</item>
        <item name="android:textColor">#000000</item>
    </style>

    <style name="buttonNumAlston" parent="android:Widget.Holo.Button.Borderless.Small">
        <item name="android:background">@drawable/button_dark_alston</item>
        <item name="android:textColor">#FFD54F</item>
    </style>

    <style name="toggleAlston" parent="android:Widget.Holo.Button.Toggle">
        <item name="android:background">@drawable/toggle_alston</item>
    </style>

    <style name="alston" parent="android:Theme.Holo">
        <item name="android:colorBackground">@color/backgroundAlston</item>
        <item name="buttonFunction">@style/buttonLightAlston</item>
        <item name="buttonOperator">@style/buttonDarkAlston</item>
        <item name="buttonSpecial">@style/buttonSpecialAlston</item>
        <item name="buttonNum">@style/buttonNumAlston</item>
        <item name="displayColor">@color/displayTextAlston</item>
        <item name="android:windowNoTitle">true</item>
        <item name="android:buttonStyle">@style/buttonDarkAlston</item>
        <item name="android:buttonStyleToggle">@style/toggleAlston</item>
    </style>


</resources>
