<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff093E53"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="30"
        android:orientation="horizontal">

        <Button
            android:id="@+id/leftScroll"
            style="@style/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:onClick="scrollLeft"
            android:text="@string/leftscroll" />

        <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="50">

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:orientation="vertical">

                <view xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/display"
                    class="com.trutech.calculall.DisplayView"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@android:color/transparent"
                    android:fadingEdge="vertical"
                    android:scrollbars="vertical" />

                <HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                    android:id="@+id/outputScroll"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:scrollbars="horizontal">

                    <view xmlns:android="http://schemas.android.com/apk/res/android"
                        android:id="@+id/output"
                        class="com.trutech.calculall.OutputView"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@android:color/transparent"
                        android:fadingEdge="vertical"
                        android:scrollbars="vertical" />
                </HorizontalScrollView>

                <requestFocus />

            </LinearLayout>

        </ScrollView>

        <Button
            android:id="@+id/rightScroll"
            style="@style/button4"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="5"
            android:onClick="scrollRight"
            android:text="@string/rightscroll" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/Grid"
        android:layout_width="fill_parent"
        android:layout_height="0sp"
        android:layout_weight="70"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/settingsRow"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <ToggleButton
                android:id="@+id/shiftButton"
                style="?android:attr/buttonStyleToggle"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:checked="false"
                android:longClickable="false"
                android:onClick="clickShift"
                android:textOff="@string/shift"
                android:textOn="@string/shift"
                android:textSize="32sp" />

            <Button
                android:id="@+id/NegativeButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickNegative"
                android:text="@string/plusminus"
                android:textSize="36sp" />

            <Button
                android:id="@+id/SqrtButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickSqrtElement"
                android:text="@string/sqrt"
                android:textSize="36sp" />

            <Button
                android:id="@+id/BackButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="clickBack"
                android:text="@string/backspace"
                android:textSize="36sp" />

            <Button
                android:id="@+id/ClearButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickClear"
                android:text="@string/C"
                android:textSize="32sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/functions_row"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/sinButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickSin"
                android:text="@string/sin"
                android:textSize="36sp" />

            <Button
                android:id="@+id/cosButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:gravity="center"
                android:onClick="clickCos"
                android:text="@string/cos"
                android:textSize="36sp" />

            <Button
                android:id="@+id/tanButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickTan"
                android:text="@string/tan"
                android:textSize="36sp" />

            <Button
                android:id="@+id/openBracketButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickOpenBracket"
                android:text="@string/openBracket"
                android:textSize="36sp" />

            <Button
                android:id="@+id/closedBracketButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickCloseBracket"
                android:text="@string/closedBracket"
                android:textSize="36sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/SevenButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickSeven"
                android:text="@string/seven"
                android:textSize="36sp" />

            <Button
                android:id="@+id/EightButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickEight"
                android:text="@string/eight"
                android:textSize="36sp" />

            <Button
                android:id="@+id/NineButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickNine"
                android:text="@string/nine"
                android:textSize="36sp" />

            <Button
                android:id="@+id/DivideButton"
                style="@style/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickDivideElement"
                android:text="@string/divide"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_row2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/FourButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickFour"
                android:text="@string/four"
                android:textSize="36sp" />

            <Button
                android:id="@+id/FiveButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickFive"
                android:text="@string/five"
                android:textSize="36sp" />

            <Button
                android:id="@+id/SixButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickSix"
                android:text="@string/six"
                android:textSize="36sp" />

            <Button
                android:id="@+id/MultiplyButton"
                style="@style/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickMultiplyElement"
                android:text="@string/multiply"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/OneButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickOne"
                android:text="@string/one"
                android:textSize="36sp" />

            <Button
                android:id="@+id/TwoButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickTwo"
                android:text="@string/two"
                android:textSize="36sp" />

            <Button
                android:id="@+id/ThreeButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickThree"
                android:text="@string/three"
                android:textSize="36sp" />

            <Button
                android:id="@+id/SubtractButton"
                style="@style/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickSubtractElement"
                android:text="@string/minus"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/num_row4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ZeroButton"
                style="@style/button3"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickZero"
                android:text="@string/zero"
                android:textSize="36sp" />

            <Button
                android:id="@+id/DecimalButton"
                style="@style/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickDecimal"
                android:text="@string/decimal"
                android:textSize="36sp" />

            <Button
                android:id="@+id/DoneButton"
                style="@style/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickDone"
                android:text="@string/done"
                android:textSize="36sp" />

            <Button
                android:id="@+id/AddButton"
                style="@style/button4"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:onClick="clickAddElement"
                android:text="@string/plus"
                android:textSize="36sp" />

        </LinearLayout>
    </LinearLayout>
</LinearLayout>