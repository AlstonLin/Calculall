<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:orientation="vertical">

        <LinearLayout
            android:id="@+id/row1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">


            <ImageButton
                android:id="@+id/history_button"
                style="?attr/buttonFunction"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:scaleType="fitCenter"
                android:src="@drawable/history_white"
                android:adjustViewBounds="true"
                android:textSize="20sp" />

            <ImageButton
                android:id="@+id/settings_button"
                style="?attr/buttonFunction"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:paddingLeft="10dp"
                android:paddingRight="10dp"
                android:paddingTop="10dp"
                android:paddingBottom="10dp"
                android:layout_weight="1"
                android:onClick="clickSettings"
                android:scaleType="fitCenter"
                android:src="@drawable/settings_white"
                android:adjustViewBounds="true"
                android:textSize="20sp" />


            <Button
                android:id="@+id/clear_button"
                style="?attr/buttonFunction"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/C"
                android:onClick="onClick"
                android:textSize="36sp" />

        </LinearLayout>

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button
            android:id="@+id/negative_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/plusminus"
            android:textSize="36sp" />

        <com.trutech.calculall.MultiButton
            android:id="@+id/sqrt_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:text="@string/sqrt"
            android:onClick="onClick"
            android:textSize="36sp" />

        <Button
            android:id="@+id/back_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:gravity="center"
            android:text="@string/backspace"
            android:onClick="onClick"
            android:textSize="36sp" />

    </LinearLayout>
        <LinearLayout
            android:id="@+id/row3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/seven_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/seven"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/eight_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/eight"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/nine_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/nine"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/divide_button"
                style="?attr/buttonOperator"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/divide"
                android:onClick="onClick"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/four_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/four"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/five_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/five"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/six_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/six"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/multiply_button"
                style="?attr/buttonOperator"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/multiply"
                android:onClick="onClick"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row5"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/one_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/one"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/two_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/two"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/three_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/three"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/subtract_button"
                style="?attr/buttonOperator"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/minus"
                android:onClick="onClick"
                android:textSize="36sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/row6"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <Button
                android:id="@+id/zero_button"
                style="?buttonNum"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/zero"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/decimal_button"
                style="?attr/buttonOperator"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/decimal"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/equals_button"
                style="?attr/buttonOperator"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/equals"
                android:onClick="onClick"
                android:textSize="36sp" />

            <Button
                android:id="@+id/add_button"
                style="?attr/buttonOperator"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:text="@string/plus"
                android:onClick="onClick"
                android:textSize="36sp" />


        </LinearLayout>
</LinearLayout>