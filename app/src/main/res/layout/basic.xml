<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/row2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/history_button"
            style="?attr/buttonFunction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_assignment"
            android:textSize="20sp" />

        <Button
            android:id="@+id/negative_button"
            style="?attr/buttonFunction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/plusminus"
            android:textSize="24dp" />

        <com.trutechinnovations.calculall.MultiButton
            android:id="@+id/sqrt_button"
            style="?attr/buttonFunction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/sqrt"
            android:textSize="24dp" />

        <Button
            android:id="@+id/back_button"
            style="?attr/buttonFunction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/backspace"
            android:textSize="24dp" />

        <Button
            android:id="@+id/clear_button"
            style="?attr/buttonFunction"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:onClick="onClick"
            android:text="@string/C"
            android:textSize="24dp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row3"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:elevation="2dp">

        <Button
            android:id="@+id/seven_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="onClick"
            android:text="@string/seven"
            android:textSize="36sp" />

        <Button
            android:id="@+id/eight_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="onClick"
            android:text="@string/eight"
            android:textSize="36sp" />

        <Button
            android:id="@+id/nine_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="onClick"
            android:text="@string/nine"
            android:textSize="36sp" />

        <Button
            android:id="@+id/divide_button"
            style="?attr/buttonOperator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="onClick"
            android:text="@string/divide"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row4"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:elevation="2dp">

        <Button
            android:id="@+id/four_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:onClick="onClick"
            android:text="@string/four"
            android:textSize="36sp" />

        <Button
            android:id="@+id/five_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/five"
            android:textSize="36sp" />

        <Button
            android:id="@+id/six_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/six"
            android:textSize="36sp" />

        <Button
            android:id="@+id/multiply_button"
            style="?attr/buttonOperator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/multiply"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row5"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:elevation="2dp">

        <Button
            android:id="@+id/one_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/one"
            android:textSize="36sp" />

        <Button
            android:id="@+id/two_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/two"
            android:textSize="36sp" />

        <Button
            android:id="@+id/three_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/three"
            android:textSize="36sp" />

        <Button
            android:id="@+id/subtract_button"
            style="?attr/buttonOperator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/minus"
            android:textSize="36sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/row6"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="3"
        android:orientation="horizontal"
        android:elevation="2dp">

        <Button
            android:id="@+id/zero_button"
            style="?buttonNum"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/zero"
            android:textSize="36sp" />

        <Button
            android:id="@+id/decimal_button"
            style="?attr/buttonOperator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/decimal"
            android:textSize="36sp" />

        <Button
            android:id="@+id/equals_button"
            style="?attr/buttonOperator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/equals"
            android:textSize="36sp" />

        <Button
            android:id="@+id/add_button"
            style="?attr/buttonOperator"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/plus"
            android:textSize="36sp" />

    </LinearLayout>
</LinearLayout>