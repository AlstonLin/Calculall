<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:colorBackground"
    android:orientation="vertical">

    <Button
        android:id="@+id/back_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="clickBack"
        android:text="@string/backspace"
        android:textColor="?displayColor"
        android:textSize="48sp" />

    <Button
        android:id="@+id/theme_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="clickTheme"
        android:text="@string/theme"
        android:textColor="?displayColor"
        android:textSize="26sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/round_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:gravity="right"
            android:text="@string/round_to"
            android:textColor="?displayColor"
            android:textSize="26sp" />

        <Spinner
            android:id="@+id/decimal_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textColor="?displayColor"
            android:textSize="26sp" />

        <TextView
            android:id="@+id/decimals_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:text="@string/decimals"
            android:textColor="?displayColor"
            android:textSize="26sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/font_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="4"
            android:gravity="right"
            android:text="@string/font_size"
            android:textColor="?displayColor"
            android:textSize="26sp" />

        <Spinner
            android:id="@+id/font_spinner"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="?displayColor"
            android:textSize="36sp" />


        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:textColor="?displayColor"
            android:textSize="26sp" />
    </LinearLayout>

    <Button
        android:id="@+id/upgrade_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="clickUpgrade"
        android:text="@string/upgrade"
        android:textColor="?displayColor"
        android:textSize="26sp" />

    <Switch
        android:id="@+id/haptic_switch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:text="@string/haptic"
        android:textColor="?displayColor"
        android:textSize="26sp" />

    <Button
        android:id="@+id/report_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="clickReport"
        android:text="@string/report"
        android:textColor="?displayColor"
        android:textSize="26sp" />

    <Button
        android:id="@+id/about_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:onClick="clickAbout"
        android:text="@string/about"
        android:textColor="?displayColor"
        android:textSize="26sp" />
</LinearLayout>