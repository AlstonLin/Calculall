<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/container"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?colorPrimary"
    android:orientation="vertical"
    tools:context=".SettingsActivity">

    <LinearLayout
        style="?attr/buttonOperator"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:orientation="vertical"
        android:weightSum="8">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Styling Changes"
            style="@style/settingsTextSeperator"/>

        <TextView
            android:id="@+id/theme_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:textColor="#fff"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:onClick="clickTheme"
            android:padding="16dp"
            android:text="@string/theme"
            android:textSize="14sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/round_text"
                style="?attr/buttonOperator"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="center_vertical|right"
                android:paddingLeft="16dp"
                android:textColor="#fff"
                android:text="@string/round_to"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/decimal_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                android:spinnerMode="dropdown"
                android:textSize="14sp" />

            <TextView
                android:id="@+id/decimals_text"
                style="?attr/buttonOperator"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:paddingLeft="8dp"
                android:textColor="#fff"
                android:text="@string/decimals"
                android:textSize="14sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/font_text"
                android:layout_width="wrap_content"
                android:layout_height="fill_parent"
                android:textColor="#fff"
                android:layout_gravity="center"
                android:gravity="left|center_vertical"
                android:padding="16dp"
                android:text="@string/font_size"
                android:textSize="14sp" />

            <android.support.v7.widget.AppCompatSpinner
                android:id="@+id/font_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="#fff"
                android:textSize="14sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/upgrade_button"
            style="?attr/buttonOperator"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="left"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="#fff"
            android:onClick="clickUpgrade"
            android:padding="16dp"
            android:text="@string/upgrade"
            android:textAlignment="gravity"
            android:textSize="14sp" />

        <CheckBox
            android:id="@+id/haptic_switch"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/haptic"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginLeft="8dp" />

        <CheckBox
            android:id="@+id/autocalculate_switch"
            android:layout_width="fill_parent"
            android:layout_height="0dp"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:checked="false"
            android:paddingLeft="16dp"
            android:paddingRight="16dp"
            android:text="@string/autocalculate"
            android:textSize="14sp"
            android:textColor="#fff"
            android:layout_marginLeft="8dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Support Us"
            style="@style/settingsTextSeperator"/>

        <TextView
            android:id="@+id/report_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="#fff"
            android:onClick="clickReport"
            android:padding="16dp"
            android:text="@string/report"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/about_button"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_gravity="center_horizontal"
            android:layout_weight="1"
            android:gravity="left|center_vertical"
            android:textColor="#fff"
            android:onClick="clickAbout"
            android:padding="16dp"
            android:text="@string/about"
            android:textSize="14sp" />
    </LinearLayout>
</LinearLayout>
