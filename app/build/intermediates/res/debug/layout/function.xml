<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/fragment_function"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff093E53"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/settingsRow1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <ToggleButton
            android:id="@+id/shift_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:longClickable="false"
            android:onClick="onClick"
            android:textOff="@string/shift"
            android:textOn="@string/shift"
            android:textSize="16sp" />

        <ToggleButton
            android:id="@+id/hyp_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:onClick="onClick"
            android:textOff="@string/hyp"
            android:textOn="@string/hyp"
            android:textSize="16sp" />


        <ImageButton
            android:id="@+id/history_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_assignment"
            android:textSize="20sp" />

        <Button
            android:id="@+id/var_x"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:onClick="onClick"
            android:text="@string/varX"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/var_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/frac_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-7dp"
            android:layout_marginRight="-7dp"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_frac_white"
            android:textSize="16sp" />

        <com.trutechinnovations.calculall.MultiButton
            android:id="@+id/square_button_function"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/square"
            android:textSize="16sp" />

        <com.trutechinnovations.calculall.MultiButton
            android:id="@+id/power_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:textSize="16sp" />


        <com.trutechinnovations.calculall.MultiButton
            android:id="@+id/sqrt_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/sqrt"
            android:textSize="16sp" />

        <Button
            android:id="@+id/log_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/ln"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_row1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.trutechinnovations.calculall.MultiButton
            android:id="@+id/sin_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/sin"
            android:textSize="16sp" />

        <com.trutechinnovations.calculall.MultiButton
            android:id="@+id/cos_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/cos"
            android:textSize="16sp" />

        <com.trutechinnovations.calculall.MultiButton
            android:id="@+id/tan_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/tan"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pi_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/pi"
            android:textSize="16sp" />

        <Button
            android:id="@+id/e_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/e"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ans_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/ans"
            android:textSize="16sp" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/actions_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:baselineAligned="true"
        android:orientation="horizontal"
        android:weightSum="5">

        <Button
            android:id="@+id/roots_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/findRoots"
            android:textSize="18sp" />

        <Button
            android:id="@+id/factor"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            android:text="@string/factor"
            android:textSize="16sp" />

        <Button
            android:id="@+id/expand"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:clickable="true"
            android:onClick="onClick"
            android:text="@string/expand"
            android:textSize="15sp" />

        <Button
            android:id="@+id/derivative_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/derivative"
            android:textSize="18sp" />

        <Button
            android:id="@+id/integral_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/integrate"
            android:textSize="24sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/numOperatorContainer"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="0dp"
        android:layout_weight="4"
        android:orientation="horizontal">

        <LinearLayout
            android:id="@+id/numContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_weight="3"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/numRow1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/seven_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/seven"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/eight_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/eight"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/nine_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/nine"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/num_row2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/four_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/four"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/five_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/five"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/six_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/six"
                    android:textSize="30sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/num_row3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/one_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/one"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/two_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/two"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/three_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/three"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/num_row4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/zero_button"
                    style="?buttonNum"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/zero"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/decimal_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/decimal"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/negative_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/plusminus"
                    android:textSize="30sp" />

            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/operatorContainer"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginBottom="0dp"
            android:layout_weight="2"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/operatorRow1"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/back_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/backspace"
                    android:textSize="20sp" />

                <Button
                    android:id="@+id/clear_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/C"
                    android:textSize="20sp" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/operatorRow2"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/open_bracket_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/open_bracket"
                    android:textSize="25sp" />

                <Button
                    android:id="@+id/closed_bracket_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/closed_bracket"
                    android:textSize="25sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/operatorRow3"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/multiply_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/multiply"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/divide_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/divide"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/operatorRow4"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginBottom="0dp"
                android:layout_weight="1"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/subtract_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/minus"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/add_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/plus"
                    android:textSize="30sp" />

            </LinearLayout>

            <Button
                android:id="@+id/graph"
                style="?buttonNum"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:onClick="onClick"
                android:text="@string/graph"
                android:textSize="18sp" />
        </LinearLayout>
    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/Ejaaz/Calculall/Calculall/app/src/main/res/layout/function.xml -->