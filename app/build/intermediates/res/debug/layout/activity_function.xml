<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff093E53"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/Container"
        android:layout_width="fill_parent"
        android:layout_height="0dp"
        android:layout_weight="20"
        android:orientation="horizontal">

        <Button
            style="@style/button4"
            android:id="@+id/leftScroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="5"
            android:onClick="scrollLeft"
            android:text="@string/leftscroll" />

        <view
            android:id="@+id/display"
            class="com.trutech.calculall.DisplayView"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="50"
            android:longClickable="false" />

        <Button
            style="@style/button4"
            android:id="@+id/rightScroll"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_weight="5"
            android:onClick="scrollRight"
            android:text="@string/rightscroll" />


    </LinearLayout>

    <LinearLayout
