            <Button
                android:id="@+id/sinButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0dp"
                
                android:layout_weight="1"
                android:onClick="clickSin"
                android:text="@string/sin"
                android:textSize="16sp" />

            <Button
                android:id="@+id/cosButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
                android:layout_weight="1"
                android:onClick="clickCos"
                android:text="@string/cos"
                android:textSize="16sp" />

            <Button
                android:id="@+id/tanButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
                android:layout_weight="1"
                android:onClick="clickTan"
                android:text="@string/tan"
                android:textSize="16sp" />

            <Button
                android:id="@+id/piButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
                android:layout_weight="1"
                android:onClick="clickPi"
                android:text="@string/pi"
                android:textSize="16sp" />

            <Button
                android:id="@+id/eButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
                android:layout_weight="1"
                android:onClick="clickE"
                android:text="@string/e"
                android:textSize="16sp" />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/functionRow2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginBottom="0dp"
            android:layout_weight="2"
            android:orientation="horizontal">

            <Button
                android:id="@+id/ln"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0dp"
                
                android:layout_weight="1"
                android:onClick="clickLn"
                android:text="@string/ln"
                android:textSize="16sp" />

            <Button
                android:id="@+id/rootButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
                android:layout_weight="1"
                android:onClick="clickRoot"
                android:text="@string/sqrt"
                android:textSize="16sp" />


            <Button
                android:id="@+id/powButton"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
                android:layout_weight="1"
