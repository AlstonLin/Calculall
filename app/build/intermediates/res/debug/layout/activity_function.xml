                android:layout_width="0dp"
                android:layout_height="fill_parent"
                android:layout_marginLeft="0dp"
                
                android:layout_weight="1"
                android:checked="false"
                android:longClickable="false"
                android:onClick="clickShift"
                android:textOff="@string/shift"
                android:textOn="@string/shift"
                android:textSize="16sp" />

            <ToggleButton
                android:id="@+id/hypButton"
                style="?android:attr/buttonStyleToggle"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
                android:layout_weight="1"
                android:checked="false"
                android:onClick="clickHyp"
                android:textOff="@string/hyp"
                android:textOn="@string/hyp"
                android:textSize="16sp" />

            <Button
                android:id="@+id/angleMode"
                style="?android:attr/buttonStyleSmall"
                android:layout_width="0dp"
                android:layout_height="fill_parent"
                
