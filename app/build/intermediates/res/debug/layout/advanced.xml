<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff093E53"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/settings_row1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/shift_button"
                style="?attr/buttonSpecial"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:checked="false"
                android:longClickable="false"
                android:onClick="onClick"
                android:textOff="@string/shift"
                android:textOn="@string/shift"
                android:textSize="16sp" />


        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/hyp_button"
                style="?attr/buttonSpecial"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:checked="false"
                android:onClick="onClick"
                android:textOff="@string/hyp"
                android:textOn="@string/hyp"
                android:textSize="16sp" />

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ToggleButton
                android:id="@+id/mem_button"
                style="?attr/buttonSpecial"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:checked="false"
                android:onClick="onClick"
                android:textOff="@string/store"
                android:textOn="@string/store"
                android:textSize="16sp" />

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <ImageButton
                android:id="@+id/history_button"
                style="?attr/buttonSpecial"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:adjustViewBounds="true"
                android:onClick="onClick"
                android:paddingBottom="5dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:paddingTop="5dp"
                android:scaleType="fitCenter"
                android:src="@drawable/ic_action_assignment"
                android:textSize="20sp" />

        </com.balysv.materialripple.MaterialRippleLayout>

        <com.balysv.materialripple.MaterialRippleLayout
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1">

            <Button
                android:id="@+id/angle_mode"
                style="?attr/buttonSpecial"
                android:layout_width="fill_parent"
                android:layout_height="fill_parent"
                android:onClick="onClick"
                android:textSize="16sp" />

        </com.balysv.materialripple.MaterialRippleLayout>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/var_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <com.balysv.materialripple.MaterialRippleLayout
