<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ff093E53"
    android:orientation="vertical">

    <LinearLayout
        android:id="@+id/settings_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/new_button"
            style="?buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:longClickable="false"
            android:onClick="onClick"
            android:text="@string/newe"
            android:textSize="16sp" />

        <Button
            android:id="@+id/edit_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:longClickable="false"
            android:onClick="onClick"
            android:text="@string/edit"
            android:textSize="16sp" />

        <ToggleButton
            android:id="@+id/mem_button"
            style="?android:attr/buttonStyleToggle"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:onClick="onClick"
            android:textOff="@string/store"
            android:textOn="@string/store"
            android:textSize="16sp" />

        <ImageButton
            android:id="@+id/settings_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="clickSettings"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_settings"
            android:textSize="20sp" />


        <ImageButton
            android:id="@+id/history_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:adjustViewBounds="true"
            android:onClick="onClick"
            android:paddingBottom="5dp"
            android:paddingLeft="5dp"
            android:paddingRight="5dp"
            android:paddingTop="5dp"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_action_assignment"
            android:textSize="20sp" />

        <Button
            android:id="@+id/back_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/backspace"
            android:textSize="20sp" />

        <Button
            android:id="@+id/clear_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/C"
            android:textSize="20sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/var_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/open_bracket_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/open_bracket"
            android:textSize="25sp" />

        <Button
            android:id="@+id/closed_bracket_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/closed_bracket"
            android:textSize="25sp" />

        <Button
            android:id="@+id/var_a"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:onClick="onClick"
            android:text="@string/varA"
            android:textSize="25sp" />

        <Button
            android:id="@+id/var_b"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:onClick="onClick"
            android:text="@string/varB"
            android:textSize="25sp" />

        <Button
            android:id="@+id/var_c"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:checked="false"
            android:onClick="onClick"
            android:text="@string/varC"
            android:textSize="25sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_row1"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/ref_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/ref"
            android:textSize="16sp" />

        <Button
            android:id="@+id/rref_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/rref"
            android:textSize="16sp" />

        <Button
            android:id="@+id/lambda_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/lambda"
            android:textSize="16sp" />

        <Button
            android:id="@+id/ev_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/ev"
            android:textSize="16sp" />

        <Button
            android:id="@+id/diag_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/diag"
            android:textSize="16sp" />

        <Button
            android:id="@+id/decomp_button"
            style="?attr/buttonSpecial"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/decomp"
            android:textSize="14sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/function_row2"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="2"
        android:orientation="horizontal">

        <Button
            android:id="@+id/det_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/det"
            android:textSize="16sp" />

        <Button
            android:id="@+id/tr_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginLeft="-7dp"
            android:layout_marginRight="-7dp"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/tr"
            android:textSize="16sp" />

        <Button
            android:id="@+id/rank_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_marginRight="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:onClick="onClick"
            android:text="@string/rank"
            android:textSize="16sp" />

        <Button
            android:id="@+id/transpose_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:textSize="16sp" />

        <Button
            android:id="@+id/pow_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:textSize="16sp" />

        <Button
            android:id="@+id/inverse_button"
            style="?attr/buttonFunction"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:textSize="16sp" />
    </LinearLayout>


    <LinearLayout
        android:id="@+id/main_row"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="4"
        android:baselineAligned="true"
        android:orientation="horizontal">

        <Button
            android:id="@+id/num_button"
            style="?buttonNum"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/num"
            android:textSize="30sp" />

        <LinearLayout
            android:id="@+id/operator_container"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="2"
            android:baselineAligned="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/operator_row1"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/add_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/plus"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/minus_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/minus"
                    android:textSize="30sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/operator_row2"
                android:layout_width="match_parent"
                android:layout_height="fill_parent"
                android:layout_weight="1"
                android:baselineAligned="true"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/multiply_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/multiply"
                    android:textSize="30sp" />

                <Button
                    android:id="@+id/augment_button"
                    style="?attr/buttonOperator"
                    android:layout_width="0dp"
                    android:layout_height="fill_parent"
                    android:layout_weight="1"
                    android:onClick="onClick"
                    android:text="@string/augment"
                    android:textSize="30sp" />

            </LinearLayout>

        </LinearLayout>

        <Button
            android:id="@+id/equals_button"
            style="?attr/buttonOperator"
            android:layout_width="0dp"
            android:layout_height="fill_parent"
            android:layout_weight="1"
            android:onClick="onClick"
            android:text="@string/equals"
            android:textSize="30sp" />

    </LinearLayout>
</LinearLayout><!-- From: file:/C:/Users/Ejaaz/TruTech/Calculall/Calculall/app/src/main/res/layout/matrix.xml -->